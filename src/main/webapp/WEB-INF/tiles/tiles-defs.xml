<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<!-- 1 Column Definition -->
	<definition name="1-cols-definition" template="/WEB-INF/tiles/layouts/columns_1.jsp">
		<put-attribute name="navigation" value="/WEB-INF/tiles/templates/navigation.jsp" />
		<put-attribute name="footer" value="/WEB-INF/tiles/templates/footer.jsp" />
	</definition>
	
	<!-- 2 Column Definition -->
	<definition name="2-cols-definition" template="/WEB-INF/tiles/layouts/columns_2.jsp">
		<put-attribute name="navigation" value="/WEB-INF/tiles/templates/navigation.jsp" />
		<put-attribute name="breadcrumb" value="/WEB-INF/tiles/templates/breadcrumb.jsp" />
		<put-attribute name="footer" value="/WEB-INF/tiles/templates/footer.jsp" />
	</definition>
	
	<!-- Home Page -->
	<definition name="*/index" extends="1-cols-definition">
		<put-attribute name="body" value="/WEB-INF/views/{1}/index.jsp" />
	</definition>

	<!-- Blog Page -->
	<definition name="*/post/*" extends="2-cols-definition">
		<put-attribute name="body" value="/WEB-INF/views/{1}/post/{2}.jsp" />
		<put-attribute name="sidebar" value="/WEB-INF/tiles/templates/blog_sidebar.jsp" />		
	</definition>

</tiles-definitions>